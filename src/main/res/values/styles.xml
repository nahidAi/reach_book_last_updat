<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundcolor">#FAFAFA</item>
        <item name="textcolor">#424242</item>
        <item name="toolbarbackgroundcolor">@color/colorPrimary</item>
        <item name="scrollViewBackgroundColor">#EEEEEE</item>
        <!--<item name="android:webTextViewStyle">@style/FontForWholeApp</item>-->
    </style>

    <style name="darkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#EF6C00</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundcolor">#212121</item>
        <item name="textcolor">#FAFAFA</item>
        <item name="toolbarbackgroundcolor">@color/colorPrimary</item>
        <item name="scrollViewBackgroundColor">#EEEEEE</item>
      <!--  <item name="android:webTextViewStyle">@style/FontForWholeApp</item>-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FontForWholeApp" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/irsans_font</item>
    </style>
    <style name="Widget.DiscreteIndicatorTextAppearance" parent="android:TextAppearance.Small">
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
        <item name="android:padding">6dp</item>
    </style>

    <style name="notifStyle" parent="Theme.AppCompat.Light">
        <item name="android:background">#e6a0a0</item>
    </style>



    <!-- Base application theme. -->






</resources>
